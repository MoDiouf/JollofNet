<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/sweetalert.js" defer></script>
<% if (message !== null && messageType !== null) { %>
  <script>
    Toastify({
      text: "<%= message %>",
      backgroundColor: "<%= messageType === 'success' ? '#4CAF50' : '#FF6347' %>", // Success = Green, Error = Red
      duration: 3000,  
      close: true,     

    }).showToast();
  </script>
<% } %>

<section id="Projects">      
    <h2>Connecter votre modem</h2>
    <div class="login-box">
      <h2>Login</h2>
      <button class="how" style="cursor: pointer;" onclick="showModal()">?</button>
      <form action="/app/addNetwork" method="post">
        
        <div class="user-box">
          <input type="text" name="username" required="" />
          <label>Username</label>
        </div>
        <div class="user-box">
          <input type="password" name="password" required="" />
          <label>Password</label>
        </div>
        <button class="buttonEnregistrer" style="color: black">Enregistrer</button>
      </form>
    </div>
  </section>
  <script>
    function showModal() {
  Swal.fire({
    title: 'Infos',
    text: "Les informations demandées se trouvent à côté ou derrière votre modem. Sinon, veuillez contacter votre fournisseur internet.",
    icon: 'info',
    confirmButtonText: "D'accord"
  });
}

  </script>

 